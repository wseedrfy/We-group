<view class="showgroup_box_userimage">
    <view>小组成员</view>
    <view class="showgroup_box_userimage_box">
        <!-- 成员 -->
        <view class="showgroup_box_userimage_groupMember" wx:for="{{groupMember}}">
        <image class="showgroup_box_userimage_groupMember_image" src="{{item.wxurl}}"></image>
        <view></view>
        </view>
        <!-- 加号 -->
        <view class="showgroup_box_userimage_add" bindtap="joinGroup">
        <image class="showgroup_box_userimage_add_image" src="../../images/addmember.png"></image>
        <view></view>
        </view>
    </view>
</view>
<button class="bottomBox_button" bindtap="showDayNum">
