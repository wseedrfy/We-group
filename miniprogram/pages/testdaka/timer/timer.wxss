page {
    height: 100%;
    width: 100%;
}

.head {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 30%;
    width: 100%;
}

.Timer {
    display: flex;
    flex-direction: column;
    align-items: center;
    height: 30%;
    width: 100%;
}

.Group_Name {
    font-size: 20px;
}

.clock {
    margin-top: 20px;
    font-size: 50px;
}

.tail {
    flex-direction: row;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 30%;
    width: 100%;
}

.submit {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 60px;
    height: 60px;
    margin-right: 30px;
    background-color: #ffffff;
    box-shadow: 1rpx 1rpx 0rpx 3rpx rgb(228, 228, 228);
    border-radius: 50%;
}

.submit_pic {
    width: 40px;
    height: 40px;
    margin-left: 3px;
}

.start {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 60px;
    height: 60px;
    background-color: #ffffff;
    box-shadow: 1rpx 1rpx 0rpx 3rpx rgb(228, 228, 228);
    border-radius: 50%;
}

.start_pic {
    width: 40px;
    height: 40px;
    margin-left: 8px;
}

.stop {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 60px;
    height: 60px;
    background-color: #ffffff;
    box-shadow: 1rpx 1rpx 0rpx 3rpx rgb(228, 228, 228);
    border-radius: 50%;
}

.stop_pic {
    width: 40px;
    height: 40px;
}